<%- include('partials/header', { 
  title: 'Paramètres',
  currentPage: 'settings'
}) %>

<div class="admin-main">
  <div class="d-flex justify-content-between mb-4">
    <h1>Paramètres du site</h1>
  </div>

  <div class="admin-card">
    <div class="admin-card-header">
      Configuration générale
    </div>
    <div class="admin-card-body">
      <form>
        <div class="mb-3">
          <label class="form-label">Nom du site</label>
          <input type="text" class="form-control" value="IA-Companion">
        </div>
        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea class="form-control">Votre compagnon pour maîtriser les IA</textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Logo</label>
          <input type="file" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
      </form>
    </div>
  </div>

  <div class="admin-card mt-4">
    <div class="admin-card-header">
      Paramètres avancés
    </div>
    <div class="admin-card-body">
      <div class="mb-3">
        <label class="form-label">Maintenance</label>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="maintenanceSwitch">
          <label class="form-check-label" for="maintenanceSwitch">Activer le mode maintenance</label>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Message de maintenance</label>
        <textarea class="form-control" placeholder="Le site est actuellement en maintenance..."></textarea>
      </div>
      <button type="submit" class="btn btn-danger">Enregistrer</button>
    </div>
  </div>
</div>

<%- include('partials/footer') %>